{
    "name": "vendure-bootstrap",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev:server": "ts-node-dev -P ./tsconfig.json ./src/index.ts",
        "dev:worker": "ts-node-dev -P ./tsconfig.json ./src/index-worker.ts",
        "dev": "concurrently yarn:dev:*",
        "build": "./build.sh",
        "start:server": "node ./dist/index.js",
        "start:worker": "node ./dist/index-worker.js",
        "start": "./entrypoint.sh",
        "migration:generate": "ts-node migration.ts generate",
        "migration:run": "ts-node migration.ts run",
        "migration:revert": "ts-node migration.ts revert",
        "prepare": "husky install",
        "format": "prettier --write --ignore-unknown"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.931.0",
        "@aws-sdk/lib-storage": "^3.931.0",
        "@types/react": "^19.2.4",
        "@vendure/asset-server-plugin": "3.5.1",
        "@vendure/core": "3.5.1",
        "@vendure/dashboard": "^3.5.1",
        "@vendure/email-plugin": "3.5.1",
        "@vendure/graphiql-plugin": "3.5.1",
        "dotenv": "17.2.3",
        "pg": "8.16.3"
    },
    "devDependencies": {
        "@commitlint/cli": "^20.1.0",
        "@commitlint/config-conventional": "^20.0.0",
        "@vendure/cli": "3.5.1",
        "concurrently": "^9.2.1",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.6",
        "prettier": "^3.6.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "5.9.3"
    },
    "lint-staged": {
        "**/*": [
            "yarn format"
        ]
    },
    "resolutions": {
        "@swc/core": "1.13.5",
        "vite": "^6.3.6"
    }
}
